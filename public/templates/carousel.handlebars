<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each images}}
      {{#when @index 0}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" class="active"></li>
      {{else}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"></li>
      {{/when}}
    {{/each}}
  </ol>
  <div class="carousel-inner" role="listbox">
    {{#each images}}
      {{#when @index 0}}
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="{{src}}" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <h3>{{caption}}</h3>
          </div>
        </div>
      {{else}}
        <div class="carousel-item">
          <img class="d-block img-fluid {{hot}}" src="{{src}}" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <h3>{{caption}}</h3>
          </div>
        </div>
      {{/when}}
    {{/each}}
  </div>
  <a class="carousel-control-prev" id="vv" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <script type='text/javascript'>
      $('.carousel').carousel({
          interval: 3000
      })
      console.log($('#new').html())
      $('a.carousel-control-prev').click(function() {
          console.log('left click')
          $('#carouselExampleIndicators').carousel('prev');
      });

      $('.carousel-control.left').click(function() {
          $('#carouselExampleIndicators').carousel('next');
      });
  </script>
</div>
