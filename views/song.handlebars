<div class='row black' style='padding:2%;'>

  {{#song.social_link}}
  <div class="fb-page col-lg-4 col-md-12 col-xs-12" data-href="{{this}}" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
    <blockquote cite="{{this}}" class="fb-xfbml-parse-ignore">
      <a href="{{this}}">{{song.artist}}</a>
    </blockquote>
  </div>
  {{/song.social_link}}
  <div class='col-lg-4 col-md-5 col-xs-12 text-center image-wrapper'>
    <img class='image' src='{{song.image}}'/>
  </div>
  <div class="col-lg-4 col-md-7 col-xs-12 jumbotron jumbotron-fluid">
    <div class="col-12 container">

      <h1 class="col-12 display-4 container-fluid">{{song.name}}</h1>
      <div class='col-12'>
        <h4 class="h4 container-fluid">
          {{song.artist}}
          <div class="fb-follow" data-href="{{song.social_link}}" data-layout="button_count" data-size="small" data-show-faces="true"></div>
        </h4>

        <input class='form-control col-12' value='www.kasirapcentral.tk/s/{{song.id}}' onmouseenter='this.select()'>

        <div class="fb-share-button"
          data-href="http://www.kasirapcentral.tk/s/{{song.id}}"
          data-layout="button_count">
        </div>
        <div class="fb-send" href="http://www.kasirapcentral.tk/s/{{song.id}}"></div>
      </div>

      <div class='col-12'>
        <a href="../{{song.src}}" download><img id='{{song.id}}' onclick="download(this,'{{../song.src}}')" class='download ico' src='../img/download.png'></a>
        <img id='{{song.id}}' onclick="playSound(this,'../{{song.src}}');" class='play ico' src='../img/play.png'  />
        <img id='{{song.id}}' onclick='flame(this)' class='heat ico' src='../img/heat.png' >
        <div class='analytics'>
          <span class='badge badge-pill badge-warning download_count'>{{song.download_count}}</span>
          <span class='badge badge-pill badge-warning play_count'>{{song.play_count}}</span>
          <span class='badge badge-pill badge-warning flame_count'>{{song.flame_count}}</span>

        </div>
        <div class="hp_slide">
            <div class="hp_range"></div>
        </div>

      </div>
    </div>
  </div>

  <div class='col-lg-12 col-md-12 col-xs-12'>

    <div class="fb-comments col-8" width="100%" data-href="http://www.kasirapcentral.tk/s/{{song.id}}"  data-numposts="5"></div>

  </div>

