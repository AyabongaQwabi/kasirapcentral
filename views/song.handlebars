<div class='row ' style='padding:2%;'>



    <div class='col-lg-4 col-sm-12 col-md-5 col-xs-12 text-center image-wrapper'>
        <img class='image' src='{{song.image}}' />
    </div>
    <div class="col-sm-12 col-lg-4 col-md-7 col-xs-12 jumbotron jumbotron-fluid">
        <div class="col-12 container">

            <h1 class="col-12 h4container-fluid">{{song.name}}</h1>
            <div class='col-12'>
                <h4 class="lead container-fluid">
                {{song.artist}}
                <div class="fb-follow" data-href="{{song.social_link}}" data-layout="button_count" data-size="small" data-show-faces="true"></div>
              </h4>

                <input class='form-control form-control-warning col-12' value='www.krissmusic.tk/s/{{song.id}}' onmouseenter='this.select()'>

                <div class="fb-share-button" data-href="https://www.krissmusic.tk/s/{{song.id}}" data-layout="button_count">
                </div>
                <div class="fb-send" href="https://www.krissmusic.tk/s/{{song.id}}"></div>
                <a href="whatsapp://send?text=https://www.kasirapcentral.tk/s/{{song.id}}" class='badge badge-success' style="padding:1.6%" data-action="share/whatsapp/share" aria-label="Left Align">
                    <span class="glyphicon glyphicon-align-left" aria-hidden="true"><i class="fa fa-whatsapp" aria-hidden="true"></i></span> Share on Whatsapp
                </a>
            </div>

            <div class='col-12' style='margin-top:15px;'>
              <a href="{{song.src}}" download>
                <span id='{{song.id}}' onclick="download(this,'{{song.src}}')" class='download'>
                  <i class="fa fa-download black" style='background:none;padding-left:50px;color:#399;text-shadow:0px 0px 0px white;font-size: 3.5em;margin'></i>
                </span>
              </a>
              <span id='{{song.id}}' onclick="playSound(this,'{{song.src}}');" class='play' ><i class="fa fa-play black" style='background:none;padding-left:50px;color:#399;text-shadow:1px 1px 1px gold;font-size: 3.5em;margin'></i></span>
              <span id='{{song.id}}' onclick='flame(this)' class='heat'><i class="fa fa-hand-pointer-o black" style='background:none;padding-left:50px;color:#399;text-shadow:0px 0px 0px #399;font-size: 3.5em;margin'></i></span>


                <div class='analytics' style='margin-top:10px;'>
                    <span class='badge badge-pill badge-warning download_count'>{{song.download_count}}</span>
                    <span class='badge badge-pill badge-warning play_count'>{{song.play_count}}</span>
                    <span class='badge badge-pill badge-warning flame_count'>{{song.flame_count}}</span>

                </div>
                <div class="hp_slide" style='margin-top:10px;'>
                    <div class="hp_range"></div>
                </div>

            </div>

        </div>

    </div>

    {{#song.social_link}}
	<div class="col-lg-4 col-sm-12 col-md-12 col-xs-12">
        <div class="fb-page" data-href="{{this}}" data-width="600px" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
            <blockquote cite="{{this}}" class="fb-xfbml-parse-ignore">
                <a href="{{this}}">{{song.artist}}</a>
            </blockquote>
        </div>
	</div>
    {{/song.social_link}}
