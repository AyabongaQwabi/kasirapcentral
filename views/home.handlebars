<style>
  .advert iframe{
    width:100%;
    max-width:100%;
  }
  .advert{
    overflow:hidden;
    background: rgba(255,200,0,.85);

  }
  iframe{
    width:100%;
    max-width:100%;
  }
</style>
<div class='row'>

    <div class='col-12 main'>
        <div class="card card-inverse" style="background-color: #0d1017; border-color: #0d1017;">
          <div class="card-block">
            <p class="card-title display-4 white" style='font-size:1.9rem;'>Download and listen to your favorite local musician now.</p>
          </div>
        </div>

        <div class='card-group'>
          {{#each songs}}
          <div class="card col-md-3" style="padding:0;margin:1%;">
            <img class="card-img-top" src="{{art}}" alt="Card image cap" style="width: 100%;height: 10em;">
            <div class="card-block">
              <h4 class="card-title">{{name}}</h4>
              <p class="card-text">{{genre}}</p>
              <p class="card-text">
                    <i class="fa fa-play black" style='color:#0d1017'> {{play_count}}</i>
                    <i class="fa fa-download black" style='color:#0d1017'>{{download_count}}</i>
                    <i class="fa fa-fire black" style='color:#0d1017'>{{flame_count}}</i>
              </p>
              <a class='btn btn-primary' href={{location}}> Go to </a>
            </div>
          </div>
          {{/each}}
       </div>
    </div>
</div>

<script src="js/bootstrap.min.js"></script>
<script src="js/classise.js"></script>
